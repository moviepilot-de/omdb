<% if @character.local_aliases( @language ).empty? %>
  <p>&nbsp;<%= 'There are no alternative character names defined'.t %></p>
<% else %>
  <ul id="character-aliases">
    <% @character.local_aliases( @language ).each { |a| %>
      <li id="alias_<%= a.id %>">
        <%= a.name %>
      </li>
    <% } %>
  </ul>
<% end %>
